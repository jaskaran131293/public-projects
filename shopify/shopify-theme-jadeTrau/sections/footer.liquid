          {% for block in section.blocks %}
          {%- case block.type -%}
          {% when 'copyright' %}
          <div class="footer-copyright">
            
              {{ block.settings.footer_copyright }}
           
          </div>
          {%- endcase -%}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</footer>

{% endunless %}
