    .history_banner_content { padding: 40px 40px;margin-top: -40px;}
    .history_content {  margin-top: 40px;}
    .history_about { padding: 65px 0;}
    .history_about h2 { font-size: 25px!important;margin: 0 0 50px;}
    .page_about_upper_main h3 { font-size: 75px!important;line-height: 66px!important;  }
    .page_about_upper_main {
    margin-bottom: 60px;
}
  @media only screen and (min-width:992px) and (max-width:1199px){
  .page_about_upper_main h3 {
    font-size: 85px!important;
    margin: 0 0 20px;
    line-height: 80px!important;}
    .page_about_upper_main {
    margin-bottom: 70px;
}
    .history_about {
    padding: 80px 0;
}
  
  }
  @media only screen and (min-width:1200px) and (max-width:1367px){
    .container{max-width:1170px;}
  }
  
</style>

