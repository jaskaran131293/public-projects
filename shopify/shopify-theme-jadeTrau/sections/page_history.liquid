<div class="history_banner">
  {% if section.settings.image != blank %}
  <img src="{{ section.settings.image | img_url:'master' }}" alt="" title="" width="100%">
  {% else %}
  <div class="onboard">
    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
  </div>
  {% endif %}
</div>

<div class="container">
<div class="history_banner_content">
  {% if section.settings.title != blank %}
  <h3>{{ section.settings.title }}</h3>
  {% endif %}
  {% if section.settings.text != blank %}
  <p>{{ section.settings.text }}</p>
  {% endif %}
</div>
</div>

<div class="container">
  <div class="history_content">
    {% if section.settings.content != blank %}
    <p>{{ section.settings.content }}</p>
    {% endif %}
  </div>
</div>


<section class="history_about">     
  {% if section.settings.heading != blank %}
  <h2>{{ section.settings.heading }}</h2>
  {% endif %}
  <div class="container">   
    {% for block in section.blocks %}
    {% capture thecycle %}{% cycle 'odd', 'even' %}{% endcapture %}
    {% if thecycle == 'odd' %}  
    <div class="page_about_upper_main"> 
      {% if block.settings.title != blank %}
      <h3>{{ block.settings.title }}</h3>
      {% endif %}

      <div class="page_about_upper"> 

        <div class="page_about_divide visible-xs">
          <div class="page_about_img ">
            {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url:'master' }}" alt="" title="" width="100%">
            {% else %}
            <div class="onboard">
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            {% endif %}
          </div>

        <div class="extra_img">   
            {% if block.settings.img2 != blank %}
            <img src="{{ block.settings.img2 | img_url:'master' }}" alt="" title="">
            {% endif %}
          </div>

        </div>

        <div class="page_about_divide ">
          <div class="page_about_text">
            {% if block.settings.content != blank %}
            <p>{{ block.settings.content }}</p>
            {% endif %}

            {% if block.settings.img != blank %}
            <img src="{{ block.settings.img | img_url:'master' }}" alt="" title="">
            {% endif %}

          </div>
        </div>

        <div class="page_about_divide hidden-xs">
          <div class="page_about_img ">
            {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url:'master' }}" alt="" title="" width="100%">
            {% else %}
            <div class="onboard">
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            {% endif %}
          </div>

       <div class="extra_img">   
            {% if block.settings.img2 != blank %}
            <img src="{{ block.settings.img2 | img_url:'master' }}" alt="" title="">
            {% endif %}
          </div>

        </div>

      </div>
    </div>
    {% else %}   
    <div class="page_about_upper_main"> 
      {% if block.settings.title != blank %}
      <h3>{{ block.settings.title }}</h3>
      {% endif %}

      <div class="page_about_upper"> 

        <div class="page_about_divide">
          <div class="page_about_img ">
            {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url:'master' }}" alt="" title="" width="100%">
            {% else %}
            <div class="onboard">
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            {% endif %}
          </div>
          
          <div class="extra_img">   
            {% if block.settings.img2 != blank %}
            <img src="{{ block.settings.img2 | img_url:'master' }}" alt="" title="">
            {% endif %}
          </div>
        </div>

        <div class="page_about_divide ">
          <div class="page_about_text">
            {% if block.settings.content != blank %}
            <p>{{ block.settings.content }}</p>
            {% endif %}

            {% if block.settings.img != blank %}
            <img src="{{ block.settings.img | img_url:'master' }}" alt="" title="">
            {% endif %}

          </div>
        </div>

      </div>
    </div>    
    {% endif %}
    {% endfor %}   
  </div>
</section>
  
<style>
  .history_banner_content{max-width:1030px;margin:0 auto;background: #BBB2B2;padding:60px 87px;margin-top: -65px;    position: relative;}
  .history_banner_content h3{text-align:center;font-size: 24px!important;margin:0 0 30px;font-weight: 500!important;font-family: 'sofia-pro' !important;line-height: 24px!important;color: #FFFFFF;} 
  .history_banner_content p{font-size: 26px;margin:0 0 0px;text-align:center;line-height: 26px;font-weight: normal;color: #FFFFFF;font-family: 'Goldenbook'!important;}
  
  .history_content{max-width:1030px;margin:0 auto;padding:0 15px;margin-top:70px; }
  .history_content p{font-size: 16px;line-height: 22px;text-align: center;color: #FFFFFF;font-weight: normal!important;font-family: 'sofia-pro' !important;}
  
  .history_about{padding:133px 0;}
  .history_about h2{ font-size: 32px!important;margin:0 0 95px;text-align: center;color: #FFFFFF;line-height: 32px!important;font-family: 'Goldenbook'!important;font-weight:bold !important;text-transform:uppercase;} 
  .page_about_upper_main{margin-bottom:90px;}
  .page_about_upper_main:last-child{margin-bottom:0}
  .page_about_upper{display:flex;flex-wrap:wrap;margin:0 -15px;}

  .page_about_divide{width:50%;padding:0 15px;}
  
  .page_about_upper_main h3{font-size: 118px!important;margin: 0 0 20px;line-height: 147px!important;color: rgba(255, 255, 255, 0.15);font-family: 'Goldenbook'!important;font-weight:bold !important;}
