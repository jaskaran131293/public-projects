<!--header-layout-01.liquid-->
{% include "mobile_naV"  %}
<div class="header-topbar">
  <div class="{% if  section.settings.enable_header_fullwidth  %}full-width {%endif %}">
    {% unless section.settings.enable_header_fullwidth %}
    <div class="container">
      {% endunless  %} 
      <div class="row">
        <div class="col-12 col-md-4">
          <div class="custom-text">{{section.settings.header_topbar_left }} </div>
        </div>
        <div class="col-12 col-md-4 text-center">
          <div class="custom-text">{{section.settings.custom_content }} </div>
        </div>
        <div class="header-cart-container col-md-4 col-12 text-right"> 
          {% if section.settings.show_header_currency %}
          <div class="header-currency">
            {% include 'new-currency-top' %}
          </div>
          {% endif %}
          {%if section.settings.show_button_language %}
          <div class="header-language">
            <div class="header-language-inner">
              {% if section.settings.language_app =='none' %}
              <ul>
                {%- assign footercol1 = section.settings.language_link_list -%}
                {% for link in linklists[footercol1].links %}
                <li{% if section.settings.default_language == link.title %} class="active"{% endif %}><a href="{{ link.url }}">{{ link.title }}</a></li>
                {%- endfor -%}
              </ul>
              {% endif %}
              {% if section.settings.language_app =='weglot' %}
              <ul class="language_droplist" data-css="{{ 'weglot_app.css' | asset_url }}">
              </ul>
              {% endif %}
            </div>
          </div>
          {% endif %}
        </div> 
      </div>
      {% unless section.settings.enable_header_fullwidth %}
    </div>
    {% endunless  %}
  </div>
</div>
<div id="header-content">
  <div class="header header-center {% if  section.settings.enable_header_fullwidth  %}full-width {%endif %}">
    {% unless section.settings.enable_header_fullwidth %}
    <div class="container">
      {% endunless  %}
      <div class="header-inner">
        <div class="row">
          <div class="col-md-2 col-12 header_twoLi">
<a class="lion_a" style = "opacity:0.5; padding-left:31px; color:
white" href="/pages/visit-us">VISIT US</a>
 <a class="lion_a" style = "opacity:0.5; padding-left:31px; color:
white" href="/pages/appointment">APPOINTMENT</a>
</div>
          <div class="col-md-2  col-12 logo-container">
            {% if template.name == 'index' %}
