            //    alert("Up");
        } else if (oldValue > newValue) {
            //     document.querySelector('.header.header-center.full-width.is-ticky').classList.remove('hide');
            // document.querySelector('#header-mobile').classList.remove('hide');
            //     alert("Down");
        }
        oldValue = newValue;
    });
}

</script>
