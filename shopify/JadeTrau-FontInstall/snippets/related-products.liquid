{% assign number_of_related_products = number_of_related_products | plus:1 %}
  

{% if product.metafields.shopify--discovery--product_recommendation.related_products != blank %} 
  <div class="related-products metafieldProductRecommended"> 
      <div class="container">
        <div class="related-heading">
          {% if related_products_title != '' %}
          <h4>YOU MAY ALSO LIKE...</h4>
          {% endif %}
        </div>
        <div class="products-grid owl-carousel xs-hidden"> 
    
          {% assign current_product = product %}
          {% assign current_product_found = false %} 
            {% for product in product.metafields.shopify--discovery--product_recommendation.related_products.value limit: number_of_related_products %}
              {% if product.handle == current_product.handle %}
                {% assign current_product_found = true %}
              {% else %}
                {% unless current_product_found == false and forloop.last %}
                {% include 'product-item-new' %}
                {% endunless %}
              {% endif %}
            {% endfor %} 
        </div>

 
        <div class="products-grid d-none xs-show">
          {% assign current_product = product %}
          {% assign current_product_found = false %}
          {% for product in product.metafields.shopify--discovery--product_recommendation.related_products.value limit: number_of_related_products %}
          
          {% if product.handle == current_product.handle %}
          {% assign current_product_found = true %}
          {% else %}
          {% unless current_product_found == false and forloop.last %}
          {% include 'product-item-new' %}
          {% endunless %}
          {% endif %}
          {% endfor %}
        </div> 
      </div>
  </div>

{% else %}
 
  {% if collection == null or collection.handle == 'frontpage' or collection.handle == 'all' %}
    {% assign found_a_collection = false %}
    {% for c in product.collections %}
      {% if found_a_collection == false and c.handle != 'frontpage' and c.handle != 'all' and c.all_products_count > 1 %}
        {% assign found_a_collection = true %}
        {% assign collection = c %}
      {% endif %}
    {% endfor %}
  {% endif %}
   
  {% if collection and collection.products_count > 1 %}
   
  <div class="related-products">
  
    <div class="container">
      <div class="related-heading">
        {% if related_products_title != '' %}
        <h4>YOU MAY ALSO LIKE...{% comment %}{{ related_products_title }}{% endcomment %}</h4>
        {% endif %}
      </div>
      <div class="products-grid owl-carousel xs-hidden"> 
  
        {% assign current_product = product %}
        {% assign current_product_found = false %} 
          {% for product in collection.products limit: number_of_related_products %}
            {% if product.handle == current_product.handle %}
              {% assign current_product_found = true %}
            {% else %}
              {% unless current_product_found == false and forloop.last %}
              {% include 'product-item-new' %}
              {% endunless %}
            {% endif %}
          {% endfor %} 
      </div>
  
      <div class="products-grid d-none xs-show">
        {% assign current_product = product %}
        {% assign current_product_found = false %}
        {% for product in collection.products limit: number_of_related_products %}
        {% if product.handle == current_product.handle %}
        {% assign current_product_found = true %}
        {% else %}
        {% unless current_product_found == false and forloop.last %}
        {% include 'product-item-new' %}
        {% endunless %}
        {% endif %}
        {% endfor %}
      </div>
      
    </div>
  </div>
{% endif %}
{% endif %}




